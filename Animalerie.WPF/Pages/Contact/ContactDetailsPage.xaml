<Page x:Class="Animalerie.WPF.Pages.Contact.ContactDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Détails du Contact">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding SelectedContact.NomComplet}" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
            <Separator Height="2" Background="#3498DB" HorizontalAlignment="Left" Width="100"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <GroupBox Header="Informations Personnelles" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Registre National :" FontWeight="SemiBold" Foreground="Gray"/>
                        <TextBlock Text="{Binding SelectedContact.RegistreNational}" FontSize="16" Margin="0,0,0,10"/>

                        <TextBlock Text="Email :" FontWeight="SemiBold" Foreground="Gray"/>
                        <TextBlock Text="{Binding SelectedContact.Email}" FontSize="16" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Coordonnées Téléphoniques" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="GSM :" FontWeight="SemiBold" Foreground="Gray"/>
                        <TextBlock Text="{Binding SelectedContact.Gsm}" FontSize="16" Margin="0,0,0,10"/>

                        <TextBlock Text="Téléphone :" FontWeight="SemiBold" Foreground="Gray"/>
                        <TextBlock Text="{Binding SelectedContact.Telephone}" FontSize="16" Margin="0,0,0,10"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Adresse" Padding="10">
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedContact.Rue}" FontSize="16" Margin="0,0,0,5"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedContact.Cp}" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding SelectedContact.Localite}" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Rôles au sein de l'animalerie" Margin="0,0,0,15" Padding="10">
                    <ItemsControl ItemsSource="{Binding SelectedContact.Roles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E1F5FE" 
                                     BorderBrush="#3498DB" 
                                     BorderThickness="1" 
                                     CornerRadius="10" 
                                     Padding="10,4" 
                                     Margin="0,0,8,8">              
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Nom}" 
                                            Foreground="#2980B9" 
                                            FontWeight="SemiBold" 
                                            FontSize="13"/> 
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Modifier" 
                    Command="{Binding EditContactCommand}" 
                    Width="120" Height="35" 
                    Background="#3498DB" Foreground="White" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>