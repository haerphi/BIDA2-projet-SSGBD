<Page x:Class="Animalerie.WPF.Pages.Animal.AnimalEditCompatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Animalerie.WPF.Pages.Animal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnimalEditCompatPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Édition des Compatibilités" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding CompatibiliteList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding TypeName}" 
                                           VerticalAlignment="Center" 
                                           FontWeight="SemiBold"/>

                                <CheckBox IsChecked="{Binding Valeur}" 
                                          Grid.Column="1" 
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          ToolTip="Est compatible ?"/>

                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                         Grid.Column="2" 
                                         Padding="5"
                                         VerticalAlignment="Center"
                                         AcceptsReturn="False"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annuler" 
                    Command="{Binding CancelCommand}"
                    Width="100" Height="30" Margin="0,0,10,0" Background="#DDDDDD"/>

            <Button Content="Valider" 
                    Command="{Binding SaveCommand}"
                    Width="100" Height="30" Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>