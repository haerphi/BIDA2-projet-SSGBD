<Page x:Class="Animalerie.WPF.Pages.Animal.AnimalAdoptionForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Animalerie.WPF.Pages.Animal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnimalAdoptionForm">

    <StackPanel Margin="20" MaxWidth="400" HorizontalAlignment="Left">
        <TextBlock Text="Faire une demande d'adoption" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Animal concerné :" FontWeight="Bold"/>
        <TextBlock Text="{Binding SelectedAnimal.Nom}" Margin="0,0,0,15"/>

        <TextBlock Text="Sélectionner le contact :" FontWeight="Bold"/>
        <ComboBox ItemsSource="{Binding Contacts}" 
                  SelectedItem="{Binding SelectedContact}"
                  DisplayMemberPath="NomComplet"
                  Margin="0,5,0,15"/>

        <TextBlock Text="Note (optionnelle) :" FontWeight="Bold"/>
        <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}" 
                 Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,20"/>

        <TextBlock Text="Statut de la demande :" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox ItemsSource="{Binding StatutOptions}" 
          SelectedItem="{Binding SelectedStatut}"
          Margin="0,0,0,15">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <StackPanel Orientation="Horizontal">
            <Button Content="Revenir en arrière" 
                    Command="{Binding CancelCommand}" 
                    Padding="10,5" Margin="0,0,10,0"/>

            <Button Content="Sauvegarder" 
                    Command="{Binding ValiderAdoptionCommand}" 
                    Padding="10,5" Margin="0,0,10,0"/>
        </StackPanel>
    </StackPanel>
</Page>
