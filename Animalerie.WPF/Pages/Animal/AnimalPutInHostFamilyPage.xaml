<Page x:Class="Animalerie.WPF.Pages.Animal.AnimalPutInHostFamilyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Animalerie.WPF.Pages.Animal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Mise en famille d'accueil"
      Loaded="Page_Loaded">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#333" Padding="20">
            <TextBlock Text="Mise en place - Famille d'accueil" 
                       Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,20" MaxWidth="600" HorizontalAlignment="Left">

                <Label Content="Animal concerné :" FontWeight="SemiBold"/>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="White" CornerRadius="4" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding SelectedAnimal.Id}" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding SelectedAnimal.Nom}" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <Label Content="Sélectionner la famille (Contact) :" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding ContactsList}" 
                          SelectedItem="{Binding SelectedContact}"
                          Margin="0,0,0,20" Padding="5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Nom}" FontWeight="Bold"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding Prenom}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Label Content="Date de début :" FontWeight="SemiBold"/>
                        <DatePicker SelectedDate="{Binding DateStart}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <Label Content="Date de fin (Optionnel) :" FontWeight="SemiBold"/>
                        <DatePicker SelectedDate="{Binding DateEnd}" VerticalAlignment="Center"/>
                        <TextBlock Text="Laisser vide si indéterminée" 
                                   FontSize="10" Foreground="Gray" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="0,1,0,0" Padding="20" Background="#F9F9F9">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Annuler" 
                        Command="{Binding CancelCommand}"
                        Width="100" Height="35" Margin="0,0,10,0"/>

                <Button Content="Sauvegarder" 
                        Command="{Binding SaveCommand}"
                        Width="120" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>