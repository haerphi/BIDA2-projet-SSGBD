<Page x:Class="Animalerie.WPF.Pages.Animal.AnimalEditVaccinationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Gestion des Vaccinations">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Ajouter une vaccination" Margin="0,0,0,20" Padding="10">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Vaccin :"/>
                    <ComboBox ItemsSource="{Binding AvailableVaccins}" 
                              DisplayMemberPath="Nom" 
                              SelectedItem="{Binding SelectedVaccin}"
                              Width="200"/>
                </StackPanel>

                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Date :"/>
                    <DatePicker SelectedDate="{Binding NewVaccinDate}" Width="150"/>
                </StackPanel>

                <Button Content="Ajouter" 
                        Command="{Binding AddVaccinationCommand}" 
                        VerticalAlignment="Bottom" 
                        Padding="15,5"/>
            </StackPanel>
        </GroupBox>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Vaccinations}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vaccin " Binding="{Binding Vaccin.Nom}" IsReadOnly="True" Width="*"/>

                <DataGridTemplateColumn Header="Date" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Supprimer" 
                                    Command="{Binding DataContext.DeleteVaccinationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding Id}"
                                    Background="IndianRed" Foreground="White"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>