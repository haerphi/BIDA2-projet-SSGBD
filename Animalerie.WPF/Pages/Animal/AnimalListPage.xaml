<Page x:Class="Animalerie.WPF.Pages.AnimalListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:Animalerie.WPF.ViewModels.Animals"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:AnimalListViewModel}"
      Title="Liste des Animaux">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Liste des Animaux" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <Border Grid.Row="1" Background="#F4F4F4" Padding="10" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,15,0">
                    <Label Content="Nom :" Padding="0,0,0,2"/>
                    <TextBox Width="120" 
                             Text="{Binding FilterNom, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <Label Content="Type :" Padding="0,0,0,2"/>
                    <ComboBox Width="100" 
                              ItemsSource="{Binding TypesAvailable}"
                              SelectedItem="{Binding FilterType}"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <Label Content="Sexe :" Padding="0,0,0,2"/>
                    <ComboBox Width="80" 
                              ItemsSource="{Binding SexesAvailable}"
                              SelectedItem="{Binding FilterSexe}"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <Label Content="Statut :" Padding="0,0,0,2"/>
                    <ComboBox Width="120" 
                              ItemsSource="{Binding StatusAvailable}"
                              SelectedItem="{Binding FilterStatus}"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <Label Content="Statut :" Padding="0,0,0,2"/>
                    <ComboBox Width="120" 
              ItemsSource="{Binding AdoptionRequestOptions}"
              SelectedItem="{Binding FilterHasAdoptionRequest}"/>
                </StackPanel>

                <Button Content="Réinitialiser" 
                        Command="{Binding ResetFiltersCommand}" 
                        VerticalAlignment="Bottom" Padding="10,2" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="dgAnimaux" 
                  Grid.Row="2" 
                  ItemsSource="{Binding Animaux}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#DDDDDD"
                  Background="White">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Identifiant" Binding="{Binding Id}" Width="110"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="120"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Sexe" Binding="{Binding Sexe}" Width="60"/>
                <DataGridTextColumn Header="Date Naiss." Binding="{Binding DateNaissance, StringFormat=\{0:dd/MM/yyyy\}}" Width="130"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding Status, TargetNullValue='N/A'}" Width="*"/>
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Détails"
                                Command="{Binding DataContext.ShowDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Margin="5,0"/>      
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>